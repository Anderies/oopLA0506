package LearningS7overriding;

class Persona {
	String nama;
	String address;
	String phoneNumber;
	String emailAddress;

	Persona(String nama, String address, String phoneNumber, String emailAddress) {
		this.nama = nama;
		this.address = address;
		this.phoneNumber = phoneNumber;
		this.emailAddress = emailAddress;
	}

	public String toString() {
		return "Nama " + this.nama + "\naddress: " + this.address + " \nphone_number: " + this.phoneNumber
				+ " \nemail_address: " + this.emailAddress;
	}
}

class Murid extends Persona {
	final String status;

	Murid(String nama, String address, String phoneNumber, String emailAddress, String status) {
		super(nama, address, phoneNumber, emailAddress);
		this.status = status;
		// TODO Auto-generated constructor stub
	}

	public String toString() {
		return super.toString() + "\nStatus: " + this.status;
	}

}

class Pegawai extends Persona {
	String office;
	String salary;
	String dateHired;

	Pegawai(String nama, String address, String phoneNumber, String emailAddress, String office, String salary,
			String dateHired) {
		super(nama, address, phoneNumber, emailAddress);
		// TODO Auto-generated constructor stub
		this.office = office;
		this.salary = salary;
		this.dateHired = dateHired;
	}

	public String toString() {
		return super.toString() + "\nOffice: " + this.office;
	}

}

class Employee extends Persona {
	int office;
	double salary;
//	MyDate dateHired;
	String dateHired;

	public Employee(String nama, String address, String phoneNumber, String emailAddress, int office, double salary,
			String dateHired) {
		super(nama, address, phoneNumber, emailAddress);
		this.office = office;
		this.salary = salary;
//		this.dateHired = new myDate();
		this.dateHired = dateHired;
	}

	/** Return a string discription of the class */
	public String toString() {
		return super.toString() + "\nOffice: " + this.office + "\nSalary: $" + this.salary + "\nDate hired: "
				+ this.dateHired;
	}
}

class Dosen extends Employee {
	String officeHours;
	String jabatanAkademik;

	public Dosen(String nama, String address, String phoneNumber, String emailAddress, int office, double salary,
			String dateHired, String officeHours, String jabatanAkademik) {
		super(nama, address, phoneNumber, emailAddress, office, salary, dateHired);

		this.officeHours = officeHours;
		this.jabatanAkademik = jabatanAkademik;
		// TODO Auto-generated constructor stub
	}

	public String toString() {
		return super.toString() + "\nOfficeHours : " + this.officeHours + "\nJabatan Akademik" + this.jabatanAkademik;
	}

}

class Staff extends Employee {
	String title;

	public Staff(String nama, String address, String phoneNumber, String emailAddress, int office, double salary,
			String dateHired, String title) {
		super(nama, address, phoneNumber, emailAddress, office, salary, dateHired);
		this.title = title;
	}

}

public class soal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Hello Person");
		Persona p = new Persona("Anderies", "Jln Anggrek No.1", "08111900639", "ndreznotanto@gmail.com");
		System.out.println(p.toString());
		System.out.println("=======================");

		System.out.println("\nHello Murid");
		Murid m = new Murid("Anderies", "Jln Anggrek No.1", "08111900639", "ndreznotanto@gmail.com", "Freshman");
		System.out.println(m.toString());

		System.out.println("=======================");
		System.out.println("\nHello Pegawai");
		Pegawai pegawai = new Pegawai("Shelly", "Jln Anggrek No.1", "08111900639", "ndreznotanto@gmail.com",
				"Kantor Anggrek", "15.000.000", "Ahli OOP");

		System.out.println(pegawai.toString());
	}

}
