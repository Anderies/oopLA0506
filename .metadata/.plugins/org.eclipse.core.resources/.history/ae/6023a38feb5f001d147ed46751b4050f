package LearningS7overriding;

class Persona {
	String nama;
	String address;
	String phoneNumber;
	String emailAddress;

	Persona(String nama, String address, String phoneNumber, String emailAddress) {
		this.nama = nama;
		this.address = address;
		this.phoneNumber = phoneNumber;
		this.emailAddress = emailAddress;
	}

	public String toString() {
		return "Nama " + this.nama + "\naddress: " + this.address 
				+ " \nphone_number: " + this.phoneNumber + " \nemail_address: " + this.emailAddress;
	}
}

class Murid extends Persona {
	final String status;
	
	Murid(String nama, String address, String phoneNumber, String emailAddress, String status) {
		super(nama, address, phoneNumber, emailAddress);
		this.status = status;
		// TODO Auto-generated constructor stub
	}

	
	
	public String toString() {
		return super.toString() + "\nStatus: " + this.status;
	}
	
	

}

class Pegawai extends Persona {
	String office;
	String salary;
	String dateHired;
	
	Pegawai(String nama, String address, String phoneNumber, 
			String emailAddress, String office, String salary, String dateHired) {
		super(nama, address, phoneNumber, emailAddress );
		// TODO Auto-generated constructor stub
		this.office = office;
		this.salary = salary;
		this.dateHired = dateHired;
	}
	
	public String toString() {
		return super.toString() + "\nOffice: " + this.office;
	}
	
}

class Employee {

}

class Dosen extends Employee {
	String officeHours;
	String jabatanAkademik;
}

class Staff extends Employee {
	String title;
}

public class soal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Hello Person");
		Persona p = new Persona("Anderies", "Jln Anggrek No.1", "08111900639", "ndreznotanto@gmail.com");
		System.out.println(p.toString());
		System.out.println("=======================");
		
		System.out.println("\nHello Murid");
		Murid m = new Murid("Anderies", "Jln Anggrek No.1", "08111900639", "ndreznotanto@gmail.com", "Freshman");
		System.out.println(m.toString());
		
		System.out.println("=======================");
		System.out.println("\nHello Pegawai");
		Pegawai pegawai = new Pegawai("Shelly", "Jln Anggrek No.1", "08111900639", 
				"ndreznotanto@gmail.com", "Kantor Anggrek", "15.000.000", "Ahli OOP");
		
		System.out.println(pegawai.toString());
	}

}
